@model Project.Models.Contact

@{
    ViewData["Title"] = "Create";
    var redirectUrl = Url.Action("Index", "Contact");
}

<h5>Create Contact</h5>

<p class="text-muted text-center mb-4">Please fill in the details below to create a new contact. Ensure that all required fields are completed.</p>

<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <!-- Form starts here -->
                <form asp-action="Create" id="createContactForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Name field -->
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label text-primary">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter contact's name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Surname field -->
                    <div class="form-group mb-3">
                        <label asp-for="Surname" class="form-label text-primary">Surname</label>
                        <input asp-for="Surname" class="form-control" placeholder="Enter contact's surname" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>

                    <!-- Email field -->
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label text-primary">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter contact's email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Submit button -->
                    <div class="d-grid">
                        <input type="submit" value="Create" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                Swal.fire({
                    title: 'Success!',
                    text: '@TempData["SuccessMessage"]',
                    icon: 'success',
                    confirmButtonText: 'OK',
                    allowOutsideClick: false
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Reload the current page
                        window.location.reload();
                    }
                });
                </text>
            }
        });
    </script>
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h5 {
        color: #343a40;
        text-align: center;
        margin-bottom: 10px;
        font-weight: 600;
    }

    p.text-muted {
        color: #6c757d;
        font-size: 14px;
        text-align: center;
    }

    .card {
        background-color: #ffffff;
        border-radius: 10px;
        padding: 20px;
        border: 1px solid #dee2e6;
    }

    .card-body {
        padding: 15px;
    }

    .form-label {
        font-weight: 500;
        font-size: 14px;
    }

    .form-control {
        font-size: 14px;
        border-radius: 5px;
        padding: 10px;
    }

    .form-control::placeholder {
        font-style: italic;
        color: #6c757d;
    }

    .btn {
        font-size: 14px;
        padding: 10px;
        border-radius: 5px;
    }

    .btn-block {
        width: 100%;
    }

    .alert {
        margin-bottom: 20px;
        border-radius: 5px;
    }

    .text-primary {
        color: #007bff !important;
    }

    .text-danger {
        font-size: 12px;
    }

    .d-grid {
        display: grid;
    }
</style>
