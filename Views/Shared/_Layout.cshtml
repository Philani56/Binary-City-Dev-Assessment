<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Site-specific CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Custom Project Styles -->
    <link rel="stylesheet" href="~/Project.styles.css" asp-append-version="true" />

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header>
        <!-- Navigation bar starts here -->
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand logo with icon -->
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-laptop-code"></i> Development Practical Test
                </a>

                <!-- Navbar toggle button for mobile view -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 custom-nav"> <!-- Added custom-nav class -->
                        <!-- Clients Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="clientsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user"></i> Client(s)
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="clientsDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Clients" asp-action="Index">View</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Clients" asp-action="Create">General</a></li>
                            </ul>
                        </li>

                        <!-- Contacts Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="contactsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-envelope"></i> Contact(s)
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="contactsDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Contacts" asp-action="Index">View</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Contacts" asp-action="Create">General</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Navigation bar ends here -->
    </header>

    <div class="container">
        <!-- Main content area -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Custom styles -->
    <style>
        /* Navbar Styles */
        .navbar {
            background: linear-gradient(135deg, #b91c1c, #ef4444); /* Gradient from dark red to light red */
            border-bottom: 2px solid #b91c1c; /* Dark red border for emphasis */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5); /* 3D effect with shadow */
        }

        .navbar-brand {
            color: #ffffff; /* White text for the brand */
            font-weight: bold; /* Makes the brand text bold */
            text-align: left; /* Align the text to the left */
            margin-right: auto; /* Push the brand to the left side */
        }

        .navbar-toggler {
            border-color: #ffffff; /* White border for the toggler */
        }

        .navbar-collapse {
            display: flex;
            justify-content: center; /* Center the navbar items horizontally */
            flex-grow: 1;
        }

        .navbar-nav {
            display: flex;
            justify-content: center; /* Center the nav items horizontally */
            margin: 0;
            padding: 0;
        }

        .navbar-nav.ms-auto {
            margin-left: auto; /* Push the navbar items to the right */
        }

        .custom-nav {
            margin-right: 20px; /* Adjust this value to move the dropdowns to the left */
        }

        .navbar-nav .nav-item {
            margin: 0 20px; /* Space between nav items */
        }

        .navbar-nav .nav-link {
            color: black; /* Text color for nav links */
        }

        .navbar-nav .nav-link:hover {
            color: #f9fafb; /* Slightly lighter white on hover */
            background-color: rgba(255, 255, 255, 0.1); /* Subtle background color on hover */
            border-radius: 4px; /* Rounded corners for hover effect */
        }

        /* Footer Styles */
        footer.footer {
            background-color: black;
            color: white;
            border-color: black; 
            padding: 10px 0; 
        }

        .footer-content {
            color: white; /* Ensures the text color is white */
            display: flex;
        }
    </style>

    <!-- Footer section -->
    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="footer-content">
                <p>2024 © Copyright</p>
            </div>
        </div>
    </footer>

    <!-- jQuery and Bootstrap JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Site-specific JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Additional scripts section -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
